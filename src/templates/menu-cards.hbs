{{#each this}}
  <li class='menu__item'>
    <article class='card'>
        <img
          src='{{image}}'
          alt='{{name}}'
          class='card__image'
          loading='lazy'
          width='400'
          higth='300'
        />
      <div class='card__content'>
        <h2 class='card__name'>{{name}}</h2>
        <p class='card__price'>
          <i class='material-icons'></i>
          {{price}}
          кредитов
        </p>

        <p class='card__descr'>
          {{description}}
        </p>

        <ul class='tag-list'>
          {{#each ingredients}}
            <li class='tag-list__item'>{{this}}</li>
          {{/each}}
        </ul>
      </div>

      <button class='card__button button'>
        <i class='material-icons button__icon'></i>
        В кошик
      </button>
    </article>
  </li>
{{/each}}